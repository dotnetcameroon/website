<aside id="sidebar" class="relative p-2 pt-24 w-auto md:w-[350px] md:p-8 md:pt-24 bg-primary my-4 transition-all rounded-tr-lg rounded-br-lg @CollapsedClass">
    <button onclick="toggleExpand()" class="hidden md:flex toggle absolute items-center justify-center size-12 rounded-full p-4 z-50 top-9 left-full -translate-x-1/2 bg-white border-solid shadow transition-all hover:bg-slate-50">
        <i class="fa-solid fa-arrow-left toggle transition-all"></i>
    </button>
    <div class="flex flex-col gap-4">
        <NavLink href="/admin" class="sidebar-link text-white hover:bg-white hover:bg-opacity-15 p-4 rounded-lg transition-all" Match="NavLinkMatch.All">
            <i class="fa-regular fa-calendar-days"></i>
            <span class="hidden md:inline nav-text text-inherit">
                Events
            </span>
        </NavLink>
        <NavLink href="/admin/partners" class="sidebar-link text-white hover:bg-white hover:bg-opacity-15 p-4 rounded-lg transition-all">
            <i class="fa-solid fa-handshake-angle"></i>
            <span class="hidden md:inline nav-text text-inherit">
                Partners
            </span>
        </NavLink>
        <NavLink href="/admin/apps" class="sidebar-link text-white hover:bg-white hover:bg-opacity-15 p-4 rounded-lg transition-all">
            <i class="fa-solid fa-gears"></i>
            <span class="hidden md:inline nav-text text-inherit">
                Applications
            </span>
        </NavLink>
    </div>
</aside>

@code{
    private string CollapsedClass = string.Empty;
    private bool _isCollapsed = false;
    private void ToggleExpand()
    {
        _isCollapsed = !_isCollapsed;
        CollapsedClass = _isCollapsed ? "collapsed" : string.Empty;
    }

    record LinkData(
        string Title,
        string Route
    );
}
