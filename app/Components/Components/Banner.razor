<div class="w-full h-[200px] relative bg-[url(/assets/carousel-2.png)] bg-cover bg-no-repeat bg-center flex items-center">
    <div class="absolute top-0 left-0 bg-black bg-opacity-60 w-full h-full"></div>
    <div class="relative z-10 container mx-auto p-4">
        <h1 class="heading heading-1 text-white">@Title</h1>
        <p class="text-white">@Description</p>
    </div>
</div>

@code{
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string Description { get; set; } = string.Empty;
    [Parameter]
    public string BackgroundImage { get; set; } = string.Empty;
}
