@inherits LayoutComponentBase
<div class="h-[100svh] bg-lightblue">
    <header>
        <AdminHeader/>
    </header>
    <main class="flex gap-2">
        <AdminSideBar/>
        <div id="body" class="relative z-10 h-[calc(100svh-80px-40px)] md:h-[calc(100svh-160px)] p-2 md:p-8 overflow-y-scroll w-full">
            @Body
        </div>
    </main>
    <footer class="flex justify-center items-center bg-white bottom-0 h-[40px] md:h-[80px]">
        Copyright &copy; <a data-enhance-nav="false" href="/" class="link">.NET Cameroon</a> &nbsp; @Year
    </footer>
</div>

@code{
    private int Year => DateTime.Now.Year;
}
