<div class="relative language-dropdown group">
    <button class="flex items-center gap-2 text-gray-700 hover:text-gray-900 transition-colors">
        <span>@CurrentLanguage</span>
        <svg class="w-4 h-4 text-gray-500 transition-transform group-hover:rotate-180" fill="currentColor"
            viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
        </svg>
    </button>

    <div
        class="absolute top-full right-0 mt-2 w-32 bg-white rounded-md shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
        <div class="py-2">
            <a class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors"
                href="@GetSetCultureUrl("en-US")" data-enhance-nav="false">English</a>
            <a class="block px-4 py-2 text-gray-700 hover:bg-gray-100 transition-colors"
                href="@GetSetCultureUrl("fr-FR")" data-enhance-nav="false">FranÃ§ais</a>
        </div>
    </div>
</div>

@code {
    [Parameter] public string CurrentLanguage { get; set; } = "English";
    [Parameter] public Func<string, string> GetSetCultureUrl { get; set; } = null!;
}
