@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory
@using app.Resources
@using Microsoft.Extensions.Localization

<section class="text-white bg-opacity-85">
    <div class="section relative mt-2 p-4 py-8 container mx-auto">
        <div class="flex flex-col gap-6 md:flex-row md:items-start md:gap-0 md:justify-between">
            <div class="w-full md:w-1/3">
                <a href="/" data-enhance-nav="false" class="flex items-center heading heading-2 w-fit" aria-label="Home">
                    <img src="/assets/brand/logo.png" alt=".NET Cameroon logo" class="w-[72px]">
                </a>
                <p>@L["Footer_Line"]</p>
            </div>
            <nav>
                <h2 class="heading heading-4">@L["Footer_Navigation"]</h2>
                <ul>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Home">@L["Footer_Home"]</a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/events" class="py-1" aria-label="Events">@L["Footer_Events"]</a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="About">@L["Footer_About"] <span class="ml-2 text-[10px] py-1 px-2 rounded-full bg-primary text-white">@L["Footer_Soon"]</span></a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Projects">@L["Footer_Projects"] <span class="ml-2 text-[10px] py-1 px-2 rounded-full bg-primary text-white">@L["Footer_Soon"]</span></a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Contact">@L["Footer_Resources"]</a>
                    </li>
                </ul>
            </nav>
            <div>
                <h2 class="heading heading-4">@L["Footer_Contact"]</h2>
                <ul>
                    <li class="py-1">@L["Footer_Location"]</li>
                    <li class="py-1"><a data-enhance-nav="false" href="mailto:@L["Footer_Email"]" class="link" aria-label="Email dotnetcameroon">@L["Footer_Email"]</a></li>
                    <li class="py-1">@L["Footer_Phone"]</li>
                </ul>
            </div>
            <div>
                <h2 class="heading heading-4">@L["Footer_Social"]</h2>
                <ul class="mt-3">
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all"><a data-enhance-nav="false" class="py-1" href="https://discord.gg/npkCMRgqdm" target="_blank" aria-label="Join Discord">Discord</a></li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all"><a data-enhance-nav="false" class="py-1" href="https://chat.whatsapp.com/KlBkiJX85Y8KFS28tIm1UU" target="_blank" aria-label="Join WhatsApp">Whatsapp</a></li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all"><a data-enhance-nav="false" class="py-1" href="https://www.linkedin.com/company/dotnetcameroon" target="_blank" aria-label="LinkedIn">LinkedIn</a></li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all"><a data-enhance-nav="false" class="py-1" href="https://t.me/+cjXkPqigrZNkNDE0" target="_blank" aria-label="Telegram">Telegram</a></li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all"><a data-enhance-nav="false" class="py-1" href="https://github.com/dotnetcameroon" target="_blank" aria-label="GitHub">Github</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="text-white bg-opacity-85">
    <div class=" relative mt-2 p-4 py-8 container mx-auto">
        <p class="text-center mt-8">@L["Footer_Copyright"] &copy; .NET Cameroon @Year | Designed by <strong class="font-bold">Lagence YOP</strong></p>
    </div>
</section>

@code{
    private Microsoft.Extensions.Localization.IStringLocalizer? _sharedLocalizer;
    private Microsoft.Extensions.Localization.IStringLocalizer L => _sharedLocalizer ??= LocalizerFactory.Create("SharedResources", "app");

    public int Year => DateTime.Now.Year;
}