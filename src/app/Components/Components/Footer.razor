@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory
@using app.Resources
@using Microsoft.Extensions.Localization

<section class="text-white bg-secondary bg-opacity-85">
    <div class=" relative mt-2 p-4 py-8 container mx-auto">
        <div class="flex flex-col gap-6 md:flex-row md:items-start md:gap-0 md:justify-between">
            <div>
                <a href="/" data-enhance-nav="false" class="flex items-center heading heading-2 w-fit" aria-label="Home">
                    .NET Cameroon
                </a>
                <!-- Newsletter form -->
            </div>
            <nav>
                <h2 class="heading heading-4">@L["Footer_Resources"]</h2>
                <ul>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Home">@L["Footer_Home"]</a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/events" class="py-1" aria-label="Events">@L["Footer_Events"]</a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="About">@L["Footer_About"] <span class="ml-2 text-[10px] py-1 px-2 rounded-full bg-primary text-white">@L["Footer_Soon"]</span></a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Projects">@L["Footer_Projects"] <span class="ml-2 text-[10px] py-1 px-2 rounded-full bg-primary text-white">@L["Footer_Soon"]</span></a>
                    </li>
                    <li class="flex w-fit items-center hover:translate-x-2 transition-all">
                        <a data-enhance-nav="false" href="/" class="py-1" aria-label="Contact">@L["Footer_Contact"]</a>
                    </li>
                </ul>
            </nav>
            <div>
                <h2 class="heading heading-4">@L["Footer_Contact"]</h2>
                <ul>
                    <li class="py-1">@L["Footer_Location"]</li>
                    <li class="py-1"><a data-enhance-nav="false" href="mailto:@L["Footer_Email"]" class="link link-white" aria-label="Email dotnetcameroon">@L["Footer_Email"]</a></li>
                    <li class="py-1">@L["Footer_Phone"]</li>
                </ul>
            </div>
            <div>
                <h2 class="heading heading-4">@L["Footer_JoinUs"]</h2>
                <p>@L["Footer_JoinDescription"]</p>
                <ul class="flex gap-2 mt-3">
                    <li><a data-enhance-nav="false" href="https://discord.gg/npkCMRgqdm" class="btn btn-primary" target="_blank" aria-label="Join Discord"><i class="fa-brands fa-discord"></i></a></li>
                    <li><a data-enhance-nav="false" href="https://chat.whatsapp.com/KlBkiJX85Y8KFS28tIm1UU" class="btn btn-primary" target="_blank" aria-label="Join WhatsApp"><i class="fa-brands fa-whatsapp"></i></a></li>
                    <li><a data-enhance-nav="false" href="https://www.linkedin.com/company/dotnetcameroon" class="btn btn-primary" target="_blank" aria-label="LinkedIn"><i class="fa-brands fa-linkedin"></i></a></li>
                    <li><a data-enhance-nav="false" href="https://github.com/dotnetcameroon" class="btn btn-primary" target="_blank" aria-label="GitHub"><i class="fa-brands fa-github"></i></a></li>
                    <li><a data-enhance-nav="false" href="https://t.me/+cjXkPqigrZNkNDE0" class="btn btn-primary" target="_blank" aria-label="Telegram"><i class="fa-brands fa-telegram"></i></a></li>
                </ul>
            </div>
        </div>
        <p class="text-center mt-8">@L["Footer_Copyright"] &copy; .NET Cameroon @Year</p>
    </div>
</section>

@code{
    private Microsoft.Extensions.Localization.IStringLocalizer? _sharedLocalizer;
    private Microsoft.Extensions.Localization.IStringLocalizer L => _sharedLocalizer ??= LocalizerFactory.Create("SharedResources", "app");

    public int Year => DateTime.Now.Year;
}