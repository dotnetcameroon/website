@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory

<section class="bg-[#1a1a2e] py-16">
    <div class="mx-auto container px-4">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
            <!-- Background Image -->
            <div class="absolute inset-0">
                <img src="/assets/activities/membership.jpeg" alt=".NET Cameroon Community"
                    class="w-full h-full object-cover" />
                <div class="absolute inset-0 bg-gradient-to-r from-black/40 to-transparent"></div>
            </div>

            <!-- Content Card -->
            <div class="relative flex items-end min-h-[900px] p-8 md:p-12">
                <div class="bg-white rounded-2xl p-8 md:p-10 max-w-2xl shadow-xl">
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        <span class="font-heading text-secondary font-bold">@SharedLocalizer["NetConf_2025_MustAttend_TitleHighlight"]</span>
                        <span class="font-heading text-gray-900 font-bold"> @SharedLocalizer["NetConf_2025_MustAttend_Title"]</span>
                    </h2>

                    <p class="text-gray-600 mb-6">
                        @SharedLocalizer["NetConf_2025_MustAttend_Description"]
                    </p>

                    <div class="flex flex-col md:flex-row gap-2">
                        <a target="_blank" href="@InscriptionFormLink" class="btn btn-primary w-full md:w-fit">
                            @SharedLocalizer["NetConf_2025_SubscribeButton"]
                        </a>
                        <a target="_blank" href="@SpeakersFormLink" class="btn btn-primary w-full md:w-fit">
                            @SharedLocalizer["NetConf_2025_SpeakersSubscribeButton"]
                        </a>
                        <a target="_blank" href="@SponsorshipFormLink" class="btn btn-outline w-full md:w-fit">
                            @SharedLocalizer["NetConf_2025_BecomeSponsorButton"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private IStringLocalizer? _sharedLocalizer;
    private IStringLocalizer SharedLocalizer => _sharedLocalizer ??= LocalizerFactory.Create("SharedResources", "app");
    private string InscriptionFormLink = "https://forms.cloud.microsoft/r/AGa4ug3XVk";
    private string SpeakersFormLink = "https://forms.office.com/r/zH2NTsFL7W";
    private string SponsorshipFormLink = "https://forms.cloud.microsoft/r/q3X9TiDC9W";
}
