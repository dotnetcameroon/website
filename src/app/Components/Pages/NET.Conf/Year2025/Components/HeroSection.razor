<div class="bg-white">
    <div class="container mx-auto px-4 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Left Panel - Event Details -->
            <div class="space-y-8">
                <!-- Header Tag -->
                <div class="inline-block">
                    <span
                        class="bg-transparent text-gray-600 px-2 py-1 rounded-full text-xs font-sm border-[1px] border-gray-200">
                        Must-attend tech event for the Microsoft Ecosystem in Cameroon
                    </span>
                </div>

                <!-- Main Title -->
                <h1 class="heading heading-1">.NET Community Conference 2025 | 8th edition  </h1>

                <!-- Description -->
                <p>
                    Join hundreds of passionate developers for a day dedicated to the .NET ecosystem.
                    Share your experiences and let's build the future of development together.
                </p>

                <!-- Event Statistics -->
                <EventStats />

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-2">
                    <button class="btn btn-primary">
                        Subscribe to event
                    </button>
                    <button class="btn btn-outline">
                        Become sponsor
                    </button>
                </div>
            </div>

            <!-- Right Panel - Countdown and Date -->
            <div class="relative">
                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-10 text-gray-400 text-xs leading-relaxed font-mono">
                    <img src="/assets/featured/pattern.png" alt="">
                </div>

                <!-- Countdown Timer -->
                <div class="relative z-10">
                    <CountdownTimer />
                </div>
            </div>
        </div>
    </div>
</div>
