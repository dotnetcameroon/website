@using Microsoft.Extensions.Localization
@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory

<div class="bg-white">
    <div class="container mx-auto px-4 py-8 lg:py-20">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <!-- Right Panel - Countdown and Date (shows first on mobile) -->
            <div class="relative order-1 lg:order-2">
                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-10 text-gray-400 text-xs leading-relaxed font-mono hidden lg:block">
                    <img src="/assets/featured/pattern.png" alt="">
                </div>

                <!-- Countdown Timer -->
                <div class="relative z-10">
                    <CountdownTimer />
                </div>
            </div>

            <!-- Left Panel - Event Details (shows second on mobile) -->
            <div class="space-y-6 lg:space-y-8 order-2 lg:order-1">
                <!-- Header Tag -->
                <div class="inline-block">
                    <span
                        class="bg-transparent text-gray-600 px-2 py-1 rounded-full text-xs font-sm border-[1px] border-gray-200">
                        @SharedLocalizer["NetConf_2025_TagLine"]
                    </span>
                </div>

                <!-- Main Title -->
                <h1 class="heading heading-1">@SharedLocalizer["NetConf_2025_Title"]</h1>

                <!-- Description -->
                <p>
                    @SharedLocalizer["NetConf_2025_Description"]
                </p>

                <!-- Event Statistics -->
                <EventStats />

                <!-- Action Buttons -->
                <div class="flex flex-col md:flex-row gap-2">
                    <button class="btn btn-primary w-full md:w-fit">
                        @SharedLocalizer["NetConf_2025_SubscribeButton"]
                    </button>
                    <button class="btn btn-outline w-full md:w-fit">
                        @SharedLocalizer["NetConf_2025_BecomeSponsorButton"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IStringLocalizer? _sharedLocalizer;
    private IStringLocalizer SharedLocalizer => _sharedLocalizer ??= LocalizerFactory.Create("SharedResources", "app");
}
