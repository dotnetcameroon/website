@using Microsoft.Extensions.Localization
@using app.domain.ViewModels
@inject Microsoft.Extensions.Localization.IStringLocalizerFactory LocalizerFactory

@if (TeamMembers.Length > 0)
{
    <section data-section-id="core-team" class="bg-[#1a1a2e] py-16">
        <div class="mx-auto container px-4">
            <div class="mb-12">
                <h2 class="heading heading-1 text-white mb-4">
                    Core team
                </h2>
                <p class="text-gray-400 text-xl font-light max-w-3xl">
                    Meet the dedicated individuals behind .NET Cameroon, working tirelessly to build and nurture our vibrant developer community.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var member in TeamMembers)
                {
                    <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300">
                        <div class="flex flex-col h-full">
                            <!-- Image Section -->
                            <div class="w-full h-64 bg-gray-100 overflow-hidden">
                                <img src="@member.ImageUrl" alt="@member.Name" class="w-full h-full object-cover" />
                            </div>

                            <!-- Content Section -->
                            <div class="p-8 flex flex-col flex-grow">
                                <h3 class="text-2xl font-bold mb-2 text-gray-900">@member.Name</h3>
                                <p class="text-base text-gray-500 mb-4">@member.Role</p>

                                <hr class="border-gray-200 mb-4" />

                                <p class="text-base text-gray-600 leading-relaxed mb-4">
                                    @member.Description
                                </p>

                                @if (!string.IsNullOrEmpty(member.LinkedIn) || !string.IsNullOrEmpty(member.Website) || !string.IsNullOrEmpty(member.Github))
                                {
                                    <div class="flex gap-3 mt-auto">
                                        @if (!string.IsNullOrEmpty(member.LinkedIn))
                                        {
                                            <a href="@member.LinkedIn" target="_blank" class="text-gray-500 hover:text-blue-600 transition-colors">
