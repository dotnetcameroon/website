<div class="py-16">
    <div class="mx-auto">
        <div class="relative overflow-hidden">
            <!-- Scrolling Container -->
            <div class="flex space-x-4 animate-scroll" id="carousel-container">
                <!-- Carousel Items -->
                @foreach (var image in carouselImages)
                {
                    <div class="flex-shrink-0 w-72 h-80 rounded-2xl overflow-hidden">
                        <img src="@image" alt="Conference moment" class="w-full h-full object-cover" />
                    </div>
                }
                <!-- Duplicate items for seamless loop -->
                @foreach (var image in carouselImages)
                {
                    <div class="flex-shrink-0 w-72 h-80 rounded-2xl overflow-hidden">
                        <img src="@image" alt="Conference moment" class="w-full h-full object-cover" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    .animate-scroll {
        animation: scroll 30s linear infinite;
    }

</style>

