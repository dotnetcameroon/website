    private string FormatDuration(TimeSpan duration)
    {
        if (duration.TotalHours >= 1)
        {
            var hours = (int)duration.TotalHours;
            var minutes = duration.Minutes;
            return minutes > 0 ? $"{hours}h {minutes}min" : $"{hours}h";
        }
        return $"{duration.Minutes} min";
    }

    private string GetSessionTypeBadgeClass(SessionType type) => type switch
    {
        SessionType.Keynote => "bg-purple-100 text-purple-700",
        SessionType.Talk => "bg-blue-100 text-blue-700",
        SessionType.Workshop => "bg-green-100 text-green-700",
        SessionType.Break => "bg-gray-100 text-gray-700",
        SessionType.Sponsor => "bg-yellow-100 text-yellow-700",
        SessionType.MC => "bg-pink-100 text-pink-700",
        _ => "bg-secondary/10 text-secondary"
    };

